# LO BUS Environment Configuration
# 
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control!

# ============================================
# Google Maps API Configuration
# ============================================
# Get your API key from: https://console.cloud.google.com/
# 1. Create a new project
# 2. Enable "Maps SDK for Android"
# 3. Create API key in Credentials
# 4. Restrict to Android apps with your package name

GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ============================================
# Firebase Configuration
# ============================================
# These are already in firebase_options.dart
# But you can override them here if needed

# Your Firebase Project ID (from Firebase Console)
FIREBASE_PROJECT_ID=bus-tracker-af190

# Firebase API Key (from Google Cloud Console)
FIREBASE_API_KEY=your_firebase_api_key_here

# Firebase App ID (from Firebase Console)
FIREBASE_APP_ID=your_firebase_app_id_here

# Firebase Messaging Sender ID
FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here

# ============================================
# Application Configuration
# ============================================

# App environment: development, staging, production
APP_ENVIRONMENT=development

# Enable debug logging
DEBUG_LOGGING=true

# API timeout in seconds
API_TIMEOUT=30

# Location update frequency in seconds (for drivers)
LOCATION_UPDATE_INTERVAL=10

# Maximum distance filter for location updates (meters)
LOCATION_DISTANCE_FILTER=10

# ============================================
# Server Configuration (for backend)
# ============================================

# API Server URL (if using custom backend)
API_SERVER_URL=https://api.example.com

# Firebase Emulator Port (for local development)
FIREBASE_EMULATOR_PORT=9000
USE_FIREBASE_EMULATOR=false

# ============================================
# Notifications Configuration
# ============================================

# Enable push notifications
ENABLE_PUSH_NOTIFICATIONS=true

# Notification timeout in seconds
NOTIFICATION_TIMEOUT=30

# ============================================
# Notes
# ============================================
# - Copy this file to .env in the project root
# - Fill in your actual values
# - Never commit .env to version control
# - .env is listed in .gitignore
# - Use .env.example for documentation only
